<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.ashera.navigationview.swt"
        version="1.0">

  <name>CordovaNavigationViewPlugin</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>
  
  <platform name="swt">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="CordovaNavigationViewPlugin">
        <param name="android-package" value="com.ashera.navigationview.CordovaNavigationViewPlugin"/>
        <param name="onload" value="true" />
      </feature>
    </config-file>
	<framework src="core.gradle" custom="true" type="gradleReference" />
   	 <!-- start src -->
     <!-- src end -->
     <!-- start res -->
     <!-- res end -->
     <!-- start tsc -->
     <source-file src="tsc/src/swt/widget/BaselineLayoutImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/BottomNavigationItemViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/BottomNavigationItemViewViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/BottomNavigationMenuViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/BottomNavigationViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/NavigationMenuItemViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/NavigationMenuViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/NavigationRailItemViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/NavigationRailMenuViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/NavigationRailViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <source-file src="tsc/src/swt/widget/NavigationViewImpl.ts" target-dir="tsc/src/swt/widget"/>
     <!-- tsc end -->
  </platform>


</plugin>